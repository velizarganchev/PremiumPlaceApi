@model PremiumPlace.DTO.PlaceCreateDTO

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <!-- Form Card -->
            <div class="card">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <span class="fw-semibold h4 pt-1">Create Place</span>
                </div>
                <div class="card-body">
                    <form method="post">

                        <!-- Villa Name -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">
                                Place Name <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Name" class="form-control" placeholder="Enter place name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <!-- Details -->
                        <div class="mb-3">
                            <label asp-for="Details" class="form-label">Description</label>
                            <textarea asp-for="Details" class="form-control" rows="4"
                                      placeholder="Describe the villa"></textarea>
                            <span asp-validation-for="Details" class="text-danger small"></span>
                        </div>
                        <!-- Rate and Occupancy -->
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Rate" class="form-label">
                                    Nightly Rate <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Rate" type="number" step="0.01" class="form-control" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Rate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Occupancy" class="form-label">Max Occupancy</label>
                                <input asp-for="Occupancy" type="number" class="form-control" placeholder="Number of guests" />
                                <span asp-validation-for="Occupancy" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Sqft -->
                        <div class="mb-3">
                            <label asp-for="SquareFeet" class="form-label">Square Feet</label>
                            <input asp-for="SquareFeet" type="number" class="form-control" placeholder="Area in sqft" />
                            <span asp-validation-for="SquareFeet" class="text-danger small"></span>
                        </div>

                        <!-- Image URL -->
                        <div class="mb-4">
                            <label asp-for="ImageUrl" class="form-label">Image URL</label>
                            <input asp-for="ImageUrl" class="form-control" placeholder="https://example.com/image.jpg" />
                            <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-check me-2"></i>Create Place
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
